<h1>Be tap tinh</h1>
<br class="mh-100">
<form method="post" id="cal_form">
    <div class="row">

        <div class="col-6">
            <div class="form-group row">
                <label for="inputEmail3" class="col-3 col-form-label">Số thứ nhất</label>
                <div class="col-9">
                    <input type="number" class="form-control" name="num_1"  value="{{num_1}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-3 col-form-label">Số thứ hai</label>
                <div class="col-9">
                    <input type="number" class="form-control" name="num_2" value="{{num_2}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-3 col-form-label">Kết quả</label>
                <div class="col-9">
                    <input type="number" class="form-control" name="result" value="{{result}}" readonly>
                </div>
            </div>
            <div class="form-group row">
                <button class="btn btn-success" type="submit">Tính</button>
            </div>
        </div>
        <div class="col-6">
            <fieldset class="form-group">
                <div class="row">
                    <div class="col-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="calculation" id="calculation" value="plus" checked>
                            <label class="form-check-label" for="gridRadios1">
                                Cộng
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="calculation" id="calculation" value="minus" >
                            <label class="form-check-label" for="gridRadios1">
                                Trừ
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="calculation" id="calculation" value="times" >
                            <label class="form-check-label" for="gridRadios1">
                                Nhân
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="calculation" id="calculation" value="divide" >
                            <label class="form-check-label" for="gridRadios1">
                                Chia
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</form>
